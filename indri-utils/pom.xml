        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>com.bbn.nlp.indri.bin.IndexBuilder</mainClass>
                            <name>IndexBuilder</name>
                        </program>
                        <program>
                            <mainClass>com.bbn.nlp.indri.bin.QueryResultCounter</mainClass>
                            <name>QueryResultCounter</name>
                        </program>
                    </programs>

                </configuration>
            </plugin>
        </plugins>
    </build>


